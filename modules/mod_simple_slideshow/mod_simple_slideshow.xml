<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1" client="site" method="upgrade">
    <name>mod_simple_slideshow</name>
    <author>slash006</author>
    <creationDate>March 2018</creationDate>
    <copyright>Copyright (C) 2005 - 2016 Open Source Matters. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <authorEmail>ssslashhh@gmail.com</authorEmail>
    <authorUrl>www.sniplog.it</authorUrl>
    <version>1.0</version>
    <description>Simple slideshow module</description>
    <files>
        <filename module="mod_simple_banner">mod_simple_slideshow.php</filename>
        <folder>tmpl</folder>
    </files>



    <config>
        <fields name="params">
            <fieldset name="basic">

                <field
                        name="in-duration"
                        type="text"
                        label="Fade in duration: "
                        required="true"
                />

                <field
                        name="out-duration"
                        type="text"
                        label="Fade out duration: "
                        required="true"
                />

                <field
                        name="interval"
                        type="text"
                        label="Slide interval "
                        required="true"
                />

            </fieldset>
        </fields>
    </config>
</extension>
